<main>
  <% if flash[:notice] %>
    <div class="flash text-success">
    <%= flash[:notice] %>
    </div>
  <% end %>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>User info</h2>
        <table class='table'>
          <div>
            <%= form_with model: @user,  local: true do |f| %>
              <div class="field">
                <label for="name">name</label>
              </div>
                <%= f.text_field :name %>
              <div class="field">
                <label for="introduction">introduction</label>
              </div>
                <%= f.text_area :introduction %>
              <div class='row btn btn-outline-secondary btn-block fas fa-user-cog'>
                <!--%=link_to(user_path(@user.id)) %>-->
              </div>
            <% end %>
          </div>
        </table>
        <h2 class="mt-3">New book</h2>
          <%= form_for @book do |f| %>
            <% if @book.errors.any? %>
              <div class= "form-error">
                <%= @book.errors.count %>件のエラーが発生しました
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li>
                      <%= message %>
                    </li>
                  <% end %>
                </ul>
              </div>
            <% end %>
          <% end %>

        <div>
        <%= form_with model: @book,  local: true do |f| %>
          <div class="field">
            <label for="book_title">Title</label>
          </div>
                <%= f.text_field :title %>
          <div class="field">
            <label for="book_opinion">Opinion</label>
          </div>
            <%= f.text_area :body %>
          <div class="actions">
            <%= f.submit 'Create Book',class: 'btn bg-success text-light btn-outline-success' %>
          </div>
        <% end %>
        </div>
      </div>
      <div class='col-md-8 offset-md-1'>
        <h2>Book detail</h2>
        <table class='table table-hover table-inverse'>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                    <div class = "books-index-item">
                      <%= book.user.name %>
                    </div>
                </td>
                <td>
                    <div class = "books-index-item">
                      <%= book.title %>
                    </div>
                </td>
                <td>
                    <div class = "books-index-item">
                      <%= book.body %>
                    </div>
                </td>
                <td>
                  <%=link_to("Edit",edit_book_path(book.id),class: 'btn bg-success text-light btn-outline-success' ) %>
                </td>
                <td>
                  <%=link_to("Destroy",book_path(book.id) ,method: :delete , data: {confirm:'本当に消しますか?' } ,class: 'btn bg-danger text-light btn-outline-danger' )%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>
