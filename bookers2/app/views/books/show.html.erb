<!--BOOK SHOW-->
<%= render 'users/list', user: @user, book: @book , books: @books %>

<div class='col-md-8 offset-md-1'>
  <h2>Book Detail</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
              <div class = "books-index-item">
                <%= book.user.name %>
              </div>
          </td>
          <td>
              <div class = "books-index-item">
                <%= book.title %>
              </div>
          </td>
          <td>
              <div class = "books-index-item">
                <%= book.body %>
              </div>
          </td>
          <td>
            <%=link_to("Edit",edit_book_path(book.id),class: 'btn bg-success text-light btn-outline-success' ) %>
          </td>
          <td>
            <%=link_to("Destroy",book_path(book.id) ,method: :delete , data: {confirm:'本当に消しますか?' } ,class: 'btn bg-danger text-light btn-outline-danger' )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
