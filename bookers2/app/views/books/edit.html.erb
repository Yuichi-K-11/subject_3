<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if flash[:notice] %>
        <div class= "flash">
          <%= flash[:notice] %>
        </div>
      <% end %>
        <% if @book.errors.any? %>
          <div class= "form-error text-danger h2">
            <%= @book.errors.count %>errors prohibited this obj from being saved:
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li class = "h6">
                  <%= message %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <%= form_with model:@book, local: true do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <div class = "edit-submit">
          <%= f.submit 'Update Book' ,class: 'btn bg-success text-light btn-outline-success' %>
        </div>
        <%=link_to("Show",book_path(@book)) %> |
        <%=link_to("Back",books_path) %>
      <% end %>
    </div>
  </div>
</div
