<!--USER SHOW-->
<div class='container'>
  <div class='row'>

    <%= render 'users/list', {user: @user, book: @book, books: @books} %>

    <div class='col-md-8 offset-md-1 '>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                 <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
                 <%= link_to book.user.name, user_path %>
              </td>
              <td>
                  <div class = "books-index-item">
                    <%= link_to book.title , book_path(book) %>
                  </div>
              </td>
              <td>
                  <div class = "books-index-item">
                    <%= book.body %>
                  </div>

              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>