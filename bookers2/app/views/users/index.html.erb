<!--USER INDEX-->
<div class='container'>
  <div class='row'>

    <%= render 'users/list', user: @user , book: @book %>

    <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg"%>
              </td>
              <td>
                <div class = "books-index-item">
                  <%= user.name %>
                </div>
              </td>
              <td>
                <div class = "books-index-item">
                  <%= user.introduction %>
                </div>
              </td>
              <td>
                <%=link_to "Show",user_path(user)  %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>