<!--USER info Code-->

<% if flash[:notice] %>
  <div class="flash text-success">
  <%= flash[:notice] %>
  </div>
<% end %>

<div class='container px-4 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'>
      <h2>User info</h2>
      <table class='table'>
        <tr>
          <div>
            <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
          </div>
        </tr>
        <tr>
          <th>
          <div class="field">
            <label for="name">name</label>
          </div>
          </th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>
            <div class="field">
              <label for="introduction">introduction</label>
            </div>
          </th>
          <th><%= user.introduction %></th>
        </tr>
      </div>
    </table>
    <div class='row'>

      <% if @user.id == current_user.id %>
        <%= link_to "",edit_user_path(@user.id) ,class: 'row btn btn-outline-secondary btn-block fas fa-user-cog' %>
      <% end %>


    <div class='row'>
      <h2 class="mt-3">New book</h2>

          <% if user.errors.any? %>
            <div class= "form-error">
              <%= user.errors.count %>件のエラーが発生しました
              <ul>
                <% user.errors.full_messages.each do |message| %>
                  <li>
                    <%= message %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>

        <div>
        <%= form_with model: book, local: true do |f| %>
          <div class="field">
            <label for="book_title">Title</label>
          </div>
                <%= f.text_field :title %>
          <div class="field">
            <label for="book_opinion">Opinion</label>
          </div>
            <%= f.text_area :body %>
          <div class="actions">
            <%= f.submit 'Create Book',class: 'btn bg-success text-light btn-outline-success' %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
